# BigCommerce API credentials
BIGCOMMERCE_STORE_HASH=your_store_hash_here
BIGCOMMERCE_CHANNEL_ID=your_channel_id_here
BIGCOMMERCE_CLIENT_ID=your_client_id_here
BIGCOMMERCE_CLIENT_SECRET=your_client_secret_here
BIGCOMMERCE_ACCESS_TOKEN=your_access_token_here
BIGCOMMERCE_STOREFRONT_TOKEN=your_storefront_token_here

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# B2B configuration
B2B_API_TOKEN=your_b2b_api_token_here
B2B_API_HOST=https://api-b2b.bigcommerce.com/
LOCAL_BUYER_PORTAL_HOST=http://localhost:3001

# Algolia config
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_APP_KEY=your_algolia_search_key
NEXT_PUBLIC_ALGOLIA_INDEXNAME=your_index_name

# Turbo remote cache
TURBO_REMOTE_CACHE_SIGNATURE_KEY=your_turbo_cache_key_here

# Default revalidation target
NEXT_PUBLIC_DEFAULT_REVALIDATE_TARGET=3600 